<p id="notice"><%= notice %></p>

<h1>Simples</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @simples.each do |simple| %>
      <tr>
        <td><%= simple.title %></td>
        <td><%= simple.body %></td>
        <td><%= link_to 'Show', simple %></td>
        <td><%= link_to 'Edit', edit_simple_path(simple) %></td>
        <td><%= link_to 'Destroy', simple, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Simple', new_simple_path %>
